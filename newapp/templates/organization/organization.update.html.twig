{% extends 'base.html.twig' %}

{% block title %}Modification de l'organisation{% endblock %}

{% block body %}

<main class="pt-20 pl-64 min-h-screen bg-bdark-white">
	<div class="px-10 py-5">
		<h1 class="mb-14 text-3xl font-semibold">Modification de l'organisation {{ organization.name }}</h1>
		<div class="p-14 rounded-xl bg-white">
			{{ form_start(form) }}
			<div class="flex flex-col gap-10 items-start">
				<div class="flex gap-5">
					{{form_row(form.email)}}
					{{form_row(form.phone)}}
				</div>
				<div class="flex gap-5">
					{{form_row(form.activity)}}
					{{form_row(form.image)}}
				</div>
				<div class="flex flex-col gap-3">
					<span>Aper√ßu de l'image :</span>
					{% if imageExist %}
						<img class="w-64" src="{{ asset('storage/images/organizations/' ~ organization.id ~ '.jpeg') }}" alt="{{ "Image" ~  " " ~ organization.name }}">
					{% else %}
						<small>Vous n'avez pas encore de logo, ajoutez-en un !</small>
					{% endif %}
				</div>	
				<div class="w-full flex justify-end">
					{{ form_widget(form.submit) }}
				</div>		
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</main>
{% endblock %}