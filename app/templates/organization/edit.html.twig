{% extends 'base.html.twig' %}

{% block title %}Modification de l'organisation{% endblock %}

{% block body %}

{% include 'components/header.html.twig' %}

{% include 'components/sidebar.html.twig' %}

<main class="pt-20 pl-64 min-h-screen bg-bdark-white">
	<div class="px-10 py-5">
		<h1 class="mb-14 text-3xl font-semibold">Modification de l'organisation {{ organization.name }}</h1>
		<div class="p-14 rounded-xl bg-white">
			{{ form_start(form) }}
			<div class="flex flex-col gap-10 items-start">
				<div class="flex gap-5">
					<div class="max-w-xs flex flex-col gap-2">
						{{ form_label(form.email) }}
						{{ form_widget(form.email) }}
						<div class="text-sm text-red-600">
							{{ form_errors(form.email) }}
						</div>
					</div>
					<div class="max-w-xs flex flex-col gap-2">
						{{ form_label(form.phone) }}
						{{ form_widget(form.phone) }}
						<div class="text-sm text-red-600">
							{{ form_errors(form.phone) }}
						</div>
					</div>
				</div>
				<div class="flex gap-5">
					<div class="max-w-xs flex flex-col gap-2">
						{{ form_label(form.activity) }}
						{{ form_widget(form.activity) }}
						<div class="text-sm text-red-600">
							{{ form_errors(form.activity) }}
						</div>
					</div>
					<div class="max-w-xs flex flex-col gap-2">
						{{ form_label(form.image) }}
						{{ form_widget(form.image) }}
						<div class="text-sm text-red-600">
							{{ form_errors(form.image) }}
						</div>
					</div>
				</div>
				<div>
					<span>Aper√ßu de l'image</span>
					{% if organizationHaveImage %}
					<img class="w-[250px]" src="{{ asset('storage/images/organizations/' ~ organization.id ~ '.jpeg') }}" alt="{{ "Image" ~  " " ~ organization.name }}">
					{% else %}
					<small>Vous n'avez pas encore de logo, ajoutez-en un !</small>
					{% endif %}
				</div>	
				<div class="w-full flex justify-end">
					{{ form_widget(form.submit) }}
				</div>		
			</div>

			{{ form_end(form) }}
		</div>
	</div>
</main>
{% endblock %}