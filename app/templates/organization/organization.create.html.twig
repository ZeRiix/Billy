{% extends 'connected.html.twig' %}

{% block title %}Ajouter une organisation{% endblock %}

{% block body %}
	<h1 class="mb-14 text-3xl font-semibold dark:dark:text-dark-white">Ajouter une organisation</h1>
	<div class="p-14 rounded-xl bg-white dark:bg-dark-light-black">
		{{ form_start(form) }}
		<div class="flex flex-col gap-10 items-start">
			<div class="flex gap-5">
				{{ form_row(form.email) }}
				{{ form_row(form.phone) }}
			</div>
			<div class="flex gap-5">
				{{ form_row(form.activity) }}
				{{ form_row(form.siret) }}
			</div>	
			<div class="w-full flex justify-between items-center">
				<a href="path('app_organizations')" class="text-light-lighter-green dark:text-dark-green hover:text-light-green dark:hover:text-dark-lighter-green transition-all duration-300 mdi mdi-arrow-left">
					Revenir aux organisations
				</a>
				{{ form_widget(form.submit) }}
			</div>		
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}