{% extends 'connected.html.twig' %}

{% block title %}Créer une date de rappel{% endblock %}

{% block body %}
	<h1 class="mb-14 text-3xl font-semibold">Créer une date de rappel pour la Facture n°{{facture.chrono}}</h1>
	<div class="p-14 rounded-xl bg-white">
		{{ form_start(form) }}
		<div class="flex flex-col gap-10 items-start">
			<div class="flex gap-5">
				{{ form_row(form.date_send) }}
			</div>
			<div class="w-full flex justify-end">
				{{ form_widget(form.submit) }}
			</div>
			<a href="{{ path('app_facture_get_id', { organization: facture.organization.id, devis: facture.devis.id, facture: facture.id }) }}" class="hover:text-bgreen">
				<span class="mdi mdi-arrow-left"></span> 
				Retour à la facture
			</a>	
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}