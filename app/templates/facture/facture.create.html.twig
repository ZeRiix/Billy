{% extends 'connected.html.twig' %}

{% block title %}Créer une facture{% endblock %}

{% block body %}
	<h1 class="mb-14 text-3xl font-semibold dark:text-dark-white">Créer une facture</h1>
	<div class="p-14 rounded-xl bg-white dark:bg-dark-light-black">
		<h2 class="mb-10 text-lg dark:text-dark-white">Sélectionner une commande ou plusieurs commandes :</h2>
		<form action="" method="POST">
			<div class="flex flex-col gap-10 items-start">
				<div class="flex">
					<twig:Table
						:data="commandes"
						:cols="{
							name: 'Nom de la commande',
							'service.name': 'Nom du service',
							'unitPrice': 'Prix (en €)',
							quantity: 'Quantité',
							montant: 'Montant (en €)'
						}"
						:action="true">

						<input type="checkbox" name="{{row.id}}">
					</twig:Table>
				</div>	
				<div class="w-full flex justify-end">
					<input type="submit" value="Créer" class="px-6 py-2 text-white dark:text-dark-white font-semibold bg-light-lighter-green dark:bg-dark-green border-light-lighter-green dark:border-dark-green rounded-large hover:bg-light-green dark:hover:bg-dark-lighter-green hover:border-light-green dark:hover:border-dark-lighter-green transition-all duration-300">
				</div>
			</div>
		</form>
	</div>
{% endblock %}