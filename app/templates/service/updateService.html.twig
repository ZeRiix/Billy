{% extends 'base.html.twig' %}

{% block title %}Modifier un service{% endblock %}

{% block body %}

{% include 'components/header.html.twig' %}

{% include 'components/sidebar.html.twig' %}

<main class="pt-20 pl-64 min-h-screen bg-bdark-white">
	<div class="px-10 py-5">
		<h1 class="mb-14 text-3xl font-semibold">Modifier un service</h1>
		<div class="p-14 rounded-xl bg-white">
			{{ form_start(updateServiceForm) }}
			<div class="flex flex-col gap-10 items-start">
				<div class="max-w-xs flex flex-col gap-2">
					{{ form_label(updateServiceForm.name) }}
					{{ form_widget(updateServiceForm.name) }}
					<div class="text-sm text-red-600">
						{{ form_errors(updateServiceForm.name) }}
					</div>
				</div>
				<div class="w-full flex flex-col gap-2">
					{{ form_label(updateServiceForm.description) }}
					{{ form_widget(updateServiceForm.description) }}
					<div class="text-sm text-red-600">
						{{ form_errors(updateServiceForm.description) }}
					</div>
				</div>
				<div class="w-full flex justify-end">
					{{ form_widget(updateServiceForm.submit) }}
				</div>	
			</div>
			{{ form_end(updateServiceForm) }}
		</div>
	</div>
</main>
{% endblock %}