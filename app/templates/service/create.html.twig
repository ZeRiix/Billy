{% extends 'connected.html.twig' %}

{% block title %}{{ update ? 'Modifier le service' : 'Ajouter un service' }}{% endblock %}

{% block body %}
	<h1 class="mb-14 text-3xl font-semibold dark:text-dark-white">{{update ? 'Modifier le service' : 'Ajouter un service'}}</h1>
	<div class="p-14 rounded-xl bg-white dark:bg-dark-light-black">
		{{ form_start(createServiceForm) }}
		<div class="flex flex-col gap-10 items-start">
			<div class="flex gap-5">
				{{ form_row(createServiceForm.name) }}
				{{ form_row(createServiceForm.unitPrice)}}
			</div>
			{{ form_row(createServiceForm.description) }}
			<div class="w-full flex justify-between items-center">
				<a href="{{ path('app_services', { 'organization': organization.id }) }}" class="text-light-lighter-green dark:text-dark-green hover:text-light-green dark:hover:text-dark-lighter-green transition-all duration-300 mdi mdi-arrow-left">
					Revenir aux services
				</a>
				{{ form_widget(createServiceForm.submit) }}
			</div>
		</div>
		{{ form_end(createServiceForm) }}
	</div>
{% endblock %}