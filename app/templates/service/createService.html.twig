{% extends 'base.html.twig' %}

{% block title %}Ajouter un service{% endblock %}

{% block body %}

{% include 'components/header.html.twig' %}

{% include 'components/sidebar.html.twig' %}

<main class="pt-20 pl-64 min-h-screen bg-bdark-white">
	<div class="px-10 py-5">
		<h1 class="mb-14 text-3xl font-semibold">Ajouter un service</h1>
		<div class="p-14 rounded-xl bg-white">
			{{ form_start(createServiceForm) }}
			<div class="flex flex-col gap-10 items-start">
				{{ form_row(createServiceForm.name) }}
				{{ form_row(createServiceForm.description) }}
				<div class="w-full flex justify-end">
					{{ form_widget(createServiceForm.submit) }}
				</div>	
			</div>
			{{ form_end(createServiceForm) }}
		</div>
	</div>
</main>
{% endblock %}