<div data-controller="flashes" class="fixed top-28 right-8 w-[400px] h-40 pointer-events-none">
	{% for message in app.flashes("error") %}
		<div data-flashes-target="flash" data-action="transitioned->flashes#removeFlash" class="flash w-full min-h-10 p-3 flex gap-3 justify-between items-center border-l-4 border-red-600 bg-white dark:bg-dark-light-black rounded shadow-md pointer-events-auto transition-opacity duration-700 ease-in opacity-100">
			<div class="flex gap-3 items-center">
					<span class="mdi mdi-alert-circle-outline text-2xl text-red-600"></span>
				<div class="dark:text-dark-white">
					<span class="text-xl font-semibold">Erreur</span>
					<p class="text-sm opacity-50">{{ message }}</p>
				</div>
			</div>
			<span data-flashes-target="closeBtn" class="close-btn mdi mdi-close-thick text-2xl dark:text-dark-white opacity-50 cursor-pointer"></span>
		</div>
	{% endfor %}

	{% for message in app.flashes("success") %}
		<div data-flashes-target="flash" data-action="transitioned->flashes#removeFlash" class="flash w-full min-h-10 p-3 flex gap-3 justify-between items-center border-l-4 border-green-600 bg-white dark:bg-dark-light-black rounded shadow-md pointer-events-auto transition-opacity duration-700 ease-in opacity-100">
			<div class="flex gap-3 items-center">
					<span class="mdi mdi-check-circle-outline text-2xl text-green-600"></span>
				<div class="dark:text-dark-white">
					<span class="text-xl font-semibold">Succ√®s !</span>
					<p class="text-sm opacity-50">{{ message }}</p>
				</div>
			</div>
			<span data-flashes-target="closeBtn" class="close-btn mdi mdi-close-thick text-2xl dark:text-dark-white opacity-50 cursor-pointer"></span>
		</div>
	{% endfor %}
</div>