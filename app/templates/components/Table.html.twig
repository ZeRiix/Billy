<table class="min-w-full leading-normal">
	<thead>
		<tr>
			{% for header in cols %}
				<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">{{ header }}</th>
			{% endfor %}
			
			{% if action is defined and action == true %}
				<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
			{% endif %}
			
		</tr>
	</thead>
	<tbody>
		{% for row in data %}
			<tr class="relative">
				{% for key, value in cols %}
					{% set currentValue = row %}
					{% for prop in key|split('.') %}
							{% set currentValue = attribute(currentValue, prop) is defined ? attribute(currentValue, prop) : 'null' %}
					{% endfor %}
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						{% if block(key) is defined %}
							{{block(key)|raw}}
						{% else %}
							{{currentValue}}
						{% endif %}
					</td>
				{% endfor %}

				{% if action is defined and action == true %}
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						{% block content %}{% endblock %}
					</td>
				{% endif %}
			</tr>
		{% endfor %}
	</tbody>
</table>