{% extends 'connected.html.twig' %}

{% block title %}Liste des rôles{% endblock %}

{% block body %}
	<h1 class="text-3xl font-semibold pb-6">Liste des rôles</h1>
	
	{% if roles is not empty %}
		<twig:Table
				:data="roles"
				:cols="{
					name: 'Nom',
					created_at: 'Date de création',
					updated_at: 'Dernière modification',
				}"
				:action="true"
			>
				<a href="{{ path('app_role_update', { 'organization': getCurrentOrganization().id, 'role': row.id }) }}">
					<span class="mdi mdi-pencil text-base text-bgrey"></span>
				</a>
			</twig:Table>
	{% else %}
		<p>Aucun rôle disponible pour cette organisation.</p>
	{% endif %}
{% endblock %}