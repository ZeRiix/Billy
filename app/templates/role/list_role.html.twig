{% extends 'connected.html.twig' %}

{% block title %}Liste des rôles{% endblock %}

{% block body %}
	<div class="mb-14 flex justify-between items-center">
		<h1 class="text-3xl font-semibold">List des rôles</h1>
		<twig:Button value="Créer" :href="path('app_role', { 'organization': getCurrentOrganization().id })"></twig:Button>
	</div>
	
	{% if roles is not empty %}
		<twig:Table
			:data="roles"
			:cols="{
				name: 'Nom',
			}"
			:action="true"
		>
			<a href="{{ path('app_role_update', { 'organization': getCurrentOrganization().id, 'role': row.id }) }}">
				<span class="mdi mdi-pencil text-xl text-bgrey"></span>
			</a>
		</twig:Table>
	{% else %}
		<p>Aucun rôle disponible pour cette organisation.</p>
	{% endif %}
{% endblock %}