{% extends 'connected.html.twig' %}

{% block title %}Update role{% endblock %}
{% block body %}
<div class="px-10 py-5">
	<h1 class="text-3xl font-semibold pb-6 dark:text-dark-white">Modifier un r√¥le</h1>
	<div class="p-14 rounded-xl bg-white dark:bg-dark-light-black max-w-lg">
		{{ form_start(form) }}
			<div class="flex flex-col gap-10 items-start">
				{{ form_row(form.name) }}
				<div class="flex gap-8">
