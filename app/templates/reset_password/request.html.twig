{% extends 'home.html.twig' %}

{% block title %}Réinitialiser mot de passe{% endblock %}

{% block body %}
    <main class="flex justify-center items-center bg-light-dark-white dark:bg-dark-light-black">
		<div class="my-10 p-10 flex gap-14 flex-col items-center rounded-lg bg-white dark:bg-dark-light-white">
			<div class="flex gap-6 flex-col items-center">
				<img src="{{ asset('assets/images/billy.png') }}" alt="logo" class="w-24 aspect-square rounded-lg">
				<h1 class="text-2xl font-bold dark:text-dark-white">Réinitialiser mot de passe</h1>
			</div>

			{{ form_start(requestForm) }}
				<div class="w-fit mx-auto flex flex-col gap-2 items-center">
					{{ form_row(requestForm.email) }}
					<small class="dark:text-dark-white dark:opacity-50">
						Entrez votre adresse e-mail et nous vous enverrons un
						lien<br>pour réinitialiser votre mot de passe.
					</small>
					<div class="mt-14">
						{{ form_row(requestForm.submit) }}
					</div>
				</div>
			{{ form_end(requestForm) }}

		</div>
	</main>
{% endblock %}
