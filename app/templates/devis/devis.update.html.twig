{% extends 'base.html.twig' %}

{% block title %}Modification du devis n° {{ devis.id }}{% endblock %}

{% block body %}

{% include 'components/header.html.twig' %}

{% include 'components/sidebar.html.twig' %}

<main class="pt-20 pl-64 min-h-screen bg-bdark-white">
	<div class="px-10 py-5">
		<h1 class="mb-14 text-3xl font-semibold">Modification du devis n° {{ devis.id }}</h1>
		<div class="p-14 rounded-xl bg-white">
			{{ form_start(form) }}
			<div class="flex flex-col gap-10 items-start">
				<div class="flex gap-5">
					{{form_row(form.name)}}
					{{form_row(form.description)}}
				</div>
				<div class="flex gap-5">
					{{form_row(form.client)}}
					{{form_row(form.discount)}}
				</div>
				<div class="flex gap-5">
					<a href="{{ path('app_create_commande', {organization: organization.id, devis: devis.id}) }}">Créer une commande</a>
				</div>
				<div class="w-full flex justify-end">
					{{ form_widget(form.submit) }}
				</div>		
			</div>
			{{ form_end(form) }}
			<a href="#">Retour au devis</a>
		</div>
	</div>
</main>
{% endblock %}